{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://immersive-web/webxr-input-profiles/assets/0.1.0/layout.schema.json",
    "type": "object",
    "additionalProperties": false,
    "required":["components"],
    "properties": {
        "components": {
            "description": "The collection of components in the layout",
            "type": "object",
            "minProperties": 1,
            "additionalProperties": false,
            "patternProperties": {
                "^[a-z0-9]+(-[a-z0-9]+)*$": {
                    "type": "object",
                    "description": "Component description",
                    "additionalProperties": false,
                    "properties": {
                        "rootNodeName": { 
                            "description": "TODO",
                            "type": "string"
                        },
                        "labelAnchorNodeName": { 
                            "description": "TODO",
                            "type": "string"
                        },
                        "touchPointNodeName" : {
                            "type": "string"
                        },
                        "analogButtonValues" : {
                            "type":"boolean"
                        },
                        "visualResponses": { "$ref": "visualResponses.schema.json"}
                    },
                    "required": [ "rootNodeName", "labelAnchorNodeName", "visualResponses" ]
                }
            }
        }
    }
}